{
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"isolatedModules": true,
		"jsx": "react",
		"lib": ["ESNext", "DOM.Iterable", "DOM"],
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"outDir": ".nowhere",
		"rewriteRelativeImportExtensions": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2020",
		"types": ["@vitest/browser-playwright"],
		"verbatimModuleSyntax": true
	},
	"include": ["src/**/*.ts", ".storybook/**/*.ts", "*.ts"],
	"references": [{ "path": "../vitest-plugin-vis" }]
}
