{
	"compilerOptions": {
		"isolatedModules": true,
		"jsx": "react-jsx",
		"lib": ["ESNext", "DOM.Iterable", "DOM"],
		"composite": true,
		"module": "NodeNext",
		"moduleDetection": "force",
		"declaration": true,
		"declarationMap": true,
		"noUncheckedIndexedAccess": true,
		"outDir": "esm",
		"resolveJsonModule": true,
		"rewriteRelativeImportExtensions": true,
		"rootDir": "src",
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2020",
		"verbatimModuleSyntax": true
	},
	"include": ["src", "types"]
}
