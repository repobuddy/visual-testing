{
	"compilerOptions": {
		"composite": true,
		"isolatedModules": true,
		// "lib": ["ESNext", "DOM.Iterable", "DOM"],
		"module": "NodeNext",
		"moduleDetection": "force",
		"noUncheckedIndexedAccess": true,
		"rewriteRelativeImportExtensions": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2020",
		"verbatimModuleSyntax": true
	},
	"include": ["*.ts"],
	"references": [{ "path": "./tsconfig.esm.json" }]
}
