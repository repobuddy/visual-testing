{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"lib": ["ESNext", "DOM.Iterable", "DOM"],
		"module": "NodeNext",
		"moduleDetection": "force",
		"noUncheckedIndexedAccess": true,
		"outDir": ".nowhere",
		"resolveJsonModule": true,
		"rewriteRelativeImportExtensions": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2020",
		"types": ["vitest"],
		"verbatimModuleSyntax": true
	},
	"include": ["*.ts", "src/**/*.ts", "src/**/*.tsx", ".storybook/*.ts"]
}
